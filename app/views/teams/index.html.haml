%h1{:align => "center"}= "Your Teams for " +  @course.course_name

%table.table-bordered{:width => "90%", :align => "center"}
  %thead
    %tr
      %th{:align => "center"} Team Name
      %th{:align => "center"} Instructor
      %th{:align => "center"} Team Members

  %tbody
    - @teams_params.each do |team|
      %tr
        %td= link_to team[0], "/courses/#{@course_id}/teams/#{team[3]}/assignments"
        %td= team[1]
        %td= team[2].join(", ")

%br

%div{:align => "center"}
  - if current_user.has_role? :instructor
    = link_to "Add a New Team", new_course_team_path
