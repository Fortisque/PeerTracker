%h1 Editing team

-#= render 'form', :team => @team


%container{:align => "center", :width => "90%"}
  = simple_form_for(:team, url: course_team_path, :method => :put, :html => {:class => "form-horizontal"}) do |f|
    = f.error_notification

    .form-inputs
      = f.input :name, required: true, autofocus: true, label: 'Team Name'
      <br />
      = f.label :leave_empty , "Remove student by leaving it empty or (Optional)"      
      <br />
      <br />
      - (1..@team_size).each do |n|
        = f.label :student_id, "Student #{n} SID"
        = text_field_tag "student_sid_#{n}", (@student_sids[n] or ""), :placeholder => "(Optional)"
        <br />
        <br />
      <br />
    .form-actions
      = f.button :submit, "Save Team", :id => "save_team"
  -#= link_to 'Show', @team
  \|
  = link_to 'Back', course_teams_path
