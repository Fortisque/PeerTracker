%h1 Editing team

-#= render 'form', :team => @team


= simple_form_for(:team, url: course_team_path, :method => :put) do |f|
  = f.error_notification

  .form-inputs
    = f.input :name, required: true, autofocus: true, label: 'Team Name'
    <br />
    = f.label "Remove student by leaving it empty or (Optional)", required: false
    <br />
    <br />
    - (1..6).each do |n|
      = f.label "Student #{n} SID"
      = text_field_tag "student_sid_#{n}", (@student_sids[n] or "(Optional)")
      <br />
      <br />
    <br />
  .form-actions
    = f.button :submit, "Save Team", :id => "save_team"
-#= link_to 'Show', @team
\|
= link_to 'Back', course_teams_path
