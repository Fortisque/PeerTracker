
%h2{:align => :center} Login 
%br
%br
= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
	.form-inputs{:align => :center}
		= f.input :email, label: false,required: false, autofocus: true, :class=> "form-inline", :input_html => {:style => "width:250px;"}, placeholder: "Email"

		= f.input :password, label: false,required: false, class: 'why', :input_html => {:style => "width:250px;"}, placeholder: "Password"

		= f.input :remember_me, as: :boolean if devise_mapping.rememberable?
	.form-actions{:align => :center}
		= f.button :submit, "Log in"
%br

%div{:align => :center}
	= render "devise/shared/links"
