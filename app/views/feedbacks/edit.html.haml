%h1 Editing feedback

= simple_form_for(@feedback, url: "/courses/#{params[:course_id]}/teams/#{params[:team_id]}/assignments/#{params[:assignment_id]}/feedbacks/#{@feedback.id}") do |f|
  .form-inputs
    = f.input :comments, required: false, autofocus: true, input_html: {id: "comments_#{@feedback.receiver_id}"}
    = f.input :rating, required: false, input_html: {id: "rating_#{@feedback.receiver_id}"}
  .form-actions
    = f.button :submit, "Submit", id: "submit_#{@feedback.receiver_id}"


-#= link_to 'Show', @feedback
\|
= link_to 'Back', course_team_assignment_feedback_path(:team_id => params[:team_id], :course_id => params[:course_id], :assignment_id => params[:assignment_id])
